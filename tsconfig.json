{
        "compilerOptions": {
          "target": "ES2022",
          "module": "NodeNext",
          "moduleResolution": "NodeNext",
          "outDir": "./",
          "esModuleInterop": true,
          "forceConsistentCasingInFileNames": true,
          "strict": true,
          "skipLibCheck": true,
          "sourceMap": true,
          "types": ["node"]
         },
        "include": ["*.ts"],
        "exclude": ["node_modules"]
      }